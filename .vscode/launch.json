  "version": "0.2.0",
  "configurations": [
    {
      "name": "Api",
      "program": "${workspaceFolder}/app.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },

    {
      "name": "Database",
      "program": "${workspaceFolder}/database.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Bot",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bot.js",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
